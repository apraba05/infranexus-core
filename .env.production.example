# ─────────────────────────────────────────────────
# InfraNexus Production Environment Variables
# Copy this to .env in the project root on your EC2
# ─────────────────────────────────────────────────

# Domain (used by Caddyfile for HTTPS)
DOMAIN=infranexus.cloud

# ── Database ──
POSTGRES_USER=vmide
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=vmide

# ── NextAuth ──
NEXTAUTH_URL=https://infranexus.cloud
NEXTAUTH_SECRET=GENERATE_WITH_openssl_rand_base64_32

# ── GitHub OAuth ──
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ── Stripe (optional) ──
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_PRO_PRICE_ID=

# ── Email (Resend) ──
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@infranexus.com

# ── AWS Bedrock (AI features) ──
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=us.anthropic.claude-3-5-sonnet-20241022-v2:0
